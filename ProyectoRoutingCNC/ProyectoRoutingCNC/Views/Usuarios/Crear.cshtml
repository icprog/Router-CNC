@model Servicios.Model.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <br /><br /><br /><br /><br />
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="card mb-3">
                    <div class="card-header" style="background-color:#333333; color:#FFFFFF">
                        <i></i> Crear nuevo Usuario
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <strong>Nombre de Usuario</strong>
                                </div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control", @maxlength = "30", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-12">
                                    <strong>Apellido Paterno</strong>
                                </div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ApellidoPaterno, new { htmlAttributes = new { @class = "form-control", @maxlength = "300", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.ApellidoPaterno, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <strong>Apellido Materno</strong>
                                </div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ApellidoMaterno, new { htmlAttributes = new { @class = "form-control", @maxlength = "300", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.ApellidoMaterno, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <strong>Correo Electrónico</strong>
                                </div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "form-control", @maxlength = "300", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <strong>Contraseña</strong>
                                </div>
                                <div class="col-md-12">                                    
                                    @Html.EditorFor(model => model.Contrasenia, new { htmlAttributes = new { @class = "form-control", @maxlength = "300", @required = "required", @type = "password" } })
                                    @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">                            
                            <div class="form-group">
                                <div class="col-md-6">
                                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                                    <br /><br />
                                    <a href="@Url.Action("Index","Usuarios")" class="btn btn-default btn-block" style="background-color:#000000; color:#FFFFFF">Volver
                                        @*@Html.ActionLink("Volver", "Index")*@
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

