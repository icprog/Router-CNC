@using PagedList;
@using PagedList.Mvc;

@model  IPagedList<Servicios.Model.Usuario>

<h1 class="text-center">Signos Zodiacales</h1>

<div class="content-wrapper">
    <div class="container-fluid">
        <br />
        <p>
            <a href="@Url.Action("CrearUsuario","Usuarios")" class="btn btn-default" style="width:200px; background-color:#000000; color:#ffffff;">Crear nuevo usuario</a>
            <a class="btn btn-danger btn-default" href="@Url.Action("Index", "Panel")" style="width:200px;">Volver</a>
        </p>

        <!-- Tabla de Registros-->
        <div class="card mb-3">
            <div class="card-header" style="background-color:#333333; color:#FFFFFF">
                <i class="fa fa-table"></i> Signos Zodiacales
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                @*<th>ID</th>*@
                                <th style="background-color:#333333; color:#FFFFFF">Nombre de Usuario</th>
                                <th style="background-color:#333333; color:#FFFFFF">Apellido Paterno</th>
                                <th style="background-color:#333333; color:#FFFFFF">Apellido Materno</th>
                                <th style="background-color:#333333; color:#FFFFFF">Correo Electrónico</th>
                                <th style="background-color:#333333; color:#FFFFFF">Acciones</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>

                                <tr>
                                    @*<td>@Html.DisplayFor(modelItem => item.ProductoID)</td>*@
                                    <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ApellidoPaterno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ApellidoMaterno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.UsuarioID })
                                        @*@Html.ActionLink("Detalle", "Detalles", new { id = item.ProductoID })*@
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.UsuarioID }, new { onclick = "return confirm('¿Desea eliminar este registro?');" })
                                    </td>
                                </tr>                               
                            </tbody>
                        }
                        </table>
                    </div>
                </div>
        </div>
    </div>
</div>

