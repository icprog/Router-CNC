<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header text-center">Login</div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nombre de usuario</label>
                    @*<input class="form-control" id="exampleInputEmail1" type="text" aria-describedby="emailHelp" placeholder="Nombre de usuario" required>*@
                    @Html.TextBoxFor(model => Model.usuario, new { @class = "form-control", placeholder = "Nombre de Usuario", autocomplete = "off", autofocus = "true" })
